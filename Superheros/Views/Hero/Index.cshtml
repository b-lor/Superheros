@model IEnumerable<Superheros.Models.Hero>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlterEgo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AbilityOne)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AbilityTwo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catchphrase)
        </th>
        <th></th>
    </tr>

    @foreach (var hero in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => hero.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => hero.AlterEgo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => hero.AbilityOne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => hero.AbilityTwo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => hero.Catchphrase)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = hero.Id }) |
                @Html.ActionLink("Details", "Details", new { id = hero.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = hero.Id })
            </td>
        </tr>
    }

</table>


<form action="http://localhost:64425/Hero/Create">
    <input type="submit" value="Create a new Hero" />
</form>